{

  "is_debug": true,

  "form_name": "order-form",
  "form_root": "/test/sample-form/test1/index.php",

  "unload_message": "このページから移動してよろしいですか？\n入力内容は保存されていない可能性があります。",

  "validation": {
    "show_icon": true,
    "shift_scroll_position": -50
  },

  "reCAPTCHA": {
    "enabled": true,
    "site_key": "6LeNZrEUAAAAAKyG0BlKQhc3dkYogu08SIsp589E",
    "score": 0.5
  },

  "mail": {

    "send_by": "SMTP",
    "redirect_to": "",

    "admin": {
      "to_name"   : "ozn-formお問い合わせフォーム",
      "to"        : {
        "title|設置代行: 標準テンプレートで設置": "test1@test.to",
        "title|設置代行: デザインカスタマイズあり": "test2@test.to",
        "title|設置代行なし: 製品マニュアルあり": "test3@test.to",
        "default": "default@test.to"
      },
      "cc"        : [],
      "bcc"       : [],
      "from_name" : "<% customer_name %> 様",
      "from"      : "test@test.to",
      "reply_to"  : "<% email %>"

    },

    "auto_reply": {
      "enabled"   : true,
      "to_name"   : "<% customer_name %> 様",
      "to"        : "<% email %>",
      "cc"        : [],
      "bcc"       : [],
      "from_name" : "ozn-form受付 / ozone notes",
      "from"      : "test@test.to",
      "reply_to"  : "<% email %>"
    }
  },

  "pages": {

    "index": {
      "role": "form",
      "forms": {

        "title": {
          "label": "ご希望の導入方法",
          "validates": ["required"],
          "error_message_position": ".title-error",
          "error_message_template": "<p><% messages %></p>",
          "error_messages": {
            "required": "いずれか1つを選択してください。"
          }
        },
        "form_op[]": {
          "label": "オプション",
          "validates": ["itemCountLessThan:1"]
        },
        "form_op_req": {
          "label": "オプション要望",
            "validate_condition": {
            "form_op[]": ["required", "included:その他"]
          },
          "validates": ["required"]
        },
        "test01": {
          "label": "テスト項目１"
        },
        "test02": {
          "label": "テスト項目２",
          "validate_condition": {
            "test01": ["required", "equals_value:あ"]
          },
          "validates": ["required"]
        },
        "corporate_name": {
          "label": "企業名・団体名"
        },
        "corporate_kana": {
          "label": "企業名・団体名フリガナ",
          "validates": ["kanaOnly"]
        },
        "customer_name": {
          "label": "ご担当者様氏名",
          "validates": ["required"]
        },
        "customer_kana": {
          "label": "ご担当者様フリガナ",
          "validates": ["required", "kanaOnly"]
        },

        "email": {
          "label": "メールアドレス",
          "validates": ["required", "email_detail"],
          "mobile_mail_warning": "携帯電話のアドレスが入力されました。ozonenotes.jp ドメインからのメールを受信できるように設定お願いします。"
        },


        "mail_body": {
          "label": "お問い合わせ内容"
        },

        "privacy": {
          "label": "個人情報の取り扱い",
          "validates": ["required"],
          "error_message_position": ".privacy-error",
          "error_message_template": "<p><% messages %></p>",
          "error_messages": {
            "required": "お問い合わせにあたっては、個人情報の取り扱いへの同意をお願いします。"
          }
        }
      }
    },

    "confirm": {
      "role": "confirm"
    },

    "complete": {
      "role": "mailsend"
    }
  }
}
