{

  "is_debug": false,

  "form_name": "image_form",
  "form_root": "/samples/image/index.php",

  "validation": {
    "show_icon": false,
    "shift_scroll_position": -50
  },

  "mail": {

    "send_flag": true,
    "send_by": "SMTP",
    "redirect_to": "",

    "admin": {
