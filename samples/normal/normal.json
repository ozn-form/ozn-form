{

    "is_debug": false,
    "form_name": "normal_form",
    "form_root": "/samples/normal/index.php",
    "validation": {
        "show_icon": true,
        "shift_scroll_position": -50
    },

    "mail": {

        "send_flag": true,

        "send_by": "SMTP",

        "admin": {
            "to_name"   : "ozn-form",
            "to"        : "oznform+sample_normal@gmail.com",
            "cc"        : [],
            "bcc"       : [],
            "from_name" : "ozn-form 管理者向けサンプルメール",
            "from"      : "no-reply@ozonenotes.jp",
            "reply_to"  : "<% email %>"
        },

        "auto_reply": {
            "enabled"   : true,
            "to_name"   : "<% customer_name %> 様",
            "to"        : "<% email %>",
            "cc"        : [],
            "bcc"       : [],
            "from_name" : "ozn-form 客先向けサンプルメール",
            "from"      : "no-reply@ozonenotes.jp",
            "reply_to"  : "<% email %>"
        }
    },

    "pages": {

        "index": {
            "role": "form",
            "forms": {

                "title": {
                    "label": "お問い合わせ種別",
                    "validates": ["required"],
                    "error_message_position": ".title-error",
                    "error_message_template": "<p><% messages %></p>",
                    "error_messages": {"required": "いずれか1つを選択してください。"}
                },

                "customer_name": {
                    "label": "お名前",
                    "validates": ["required"]
                },
                "customer_kana": {
                    "label": "フリガナ",
                    "validates": ["kanaOnly","required"]
                },

                "zip-code": {
                    "label": "郵便番号",
                    "validates": ["zip"]
                },
                "pref": {
                    "label": "都道府県",
                    "validates": ["required"]
                },
                "address": {
                    "label": "番地まで",
                    "validates": ["required"]
                },
                "address-building": {
                    "label": "建物名等"
                },
                "tel": {
                    "label": "電話番号",
                    "validates": ["required", "tel"]
                },
                "email": {
                    "label": "メールアドレス",
                    "validates": ["required", "email_detail"],
                    "mobile_mail_warning": "携帯電話のアドレスが入力されました。example.com ドメインからのメールを受信できるように設定お願いします。"
                },

                "materials": {
                    "label": "興味のある商品"
                },
                "materials-etc": {
                    "label": "その他の商品名",
                    "validate_condition": {
                        "materials": ["required","equals_value:その他"]
                    },
                    "validates": ["required"]
                },
                "shipping-date": {
                    "label": "ご希望納期"
                },
                "mail_body": {
                    "label": "お問い合わせ詳細",
                    "validates": ["required"]
                },
                "survey[]": {
                    "label": "当社を何で知りましたか",
                    "validates": ["required"]
                }
            }
        },

        "confirm": {
            "role": "confirm"
        },

        "complete": {
            "role": "mailsend"
        }
    }
}
