{

  "is_debug": true,

  "form_name": "ozn-sample",
  "form_root": "/front-sample/index.php",

  "unload_message": "このページから移動してよろしいですか？\n入力内容は保存されていない可能性があります。",

  "validation": {
    "show_icon": true,
    "shift_scroll_position": -50
  },

  "mail": {

    "auto_reply": true,

    "send_by": "Gmail SMTP",

    "admin_mail_to": "oznform+admin_mail@gmail.com",
    "admin_mail_cc": [],
    "admin_mail_bcc": [],

    "customer_address_form_name": "email",
    "customer_mail_cc": [],
    "customer_mail_bcc": ["oznform+for_customer@gmail.com"],

    "from_name": "OznFormテスト送信者",
    "from_address": "oznform@gmail.com",

    "redirect_to": ""
  },

  "pages": {

    "index": {
      "role": "form",
      "forms": {

        "title": {
          "label": "お問い合わせ種別",
          "validates": ["required"],
          "error_message_position": ".title-error",
          "error_message_template": "<p><% messages %></p>",
          "error_messages": {
            "required": "いずれか1つを選択してください。"
          }
        },
        "corporate_name": {
          "label": "企業名・団体名"
        },
        "corporate_kana": {
          "label": "企業名・団体名フリガナ",
          "validates": ["kanaOnly"]
        },
        "customer_name": {
          "label": "ご担当者様氏名",
          "validates": ["required"]
        },
        "customer_kana": {
          "label": "ご担当者様フリガナ",
          "validates": ["required", "kanaOnly"]
        },

        "email": {
          "label": "メールアドレス",
          "validates": ["required", "email"],
          "mobile_mail_warning": "携帯電話のアドレスが入力されました。example.com ドメインからのメールを受信できるように設定お願いします。"
        },

        "tel": {
          "label": "電話番号",
          "validates": ["required", "tel"]
        },
        "fax": {
          "label": "FAX番号",
          "validates": ["tel"]
        },

        "zip-code": {
          "label": "郵便番号",
          "validates": ["zip"]
        },
        "pref": {
          "label": "都道府県",
          "validates": ["required"]
        },
        "address": {
          "label": "番地まで",
          "validates": ["required"]
        },
        "address-building": {
          "label": "建物名等"
        },

        "shipping-date": {
          "label": "ご希望納期"
        },

        "survey[]": {
          "label": "チェック項目"
        },
        "materials": {
          "label": "選択項目"
        },

        "mail_body": {
          "label": "お問い合わせ詳細",
          "validates": ["required"]
        },

        "attachment1[]": {
          "label": "添付ファイル１"
        },

        "attachment2[]": {
          "label": "添付ファイル２"
        },

        "privacy": {
          "label": "個人情報の取り扱い",
          "validates": ["required"],
          "error_message_position": ".privacy-error",
          "error_message_template": "<p><% messages %></p>",
          "error_messages": {
            "required": "お問い合わせにあたっては、個人情報の取り扱いへの同意をお願いします。"
          }
        }
      }
    },

    "confirm": {
      "role": "confirm"
    },

    "complete": {
      "role": "mailsend"
    }
  }
}